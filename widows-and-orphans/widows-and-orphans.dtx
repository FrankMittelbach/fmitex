% check if the output penalty was due to orphan or widow or both

      
\cs_new:Npn \@@_test_for_widows_etc: {
  \int_case:nn { \outputpenalty - \interlinepenalty }
    {
      { \widowpenalty }
	{ \msg_warning:nnn{widows-and-orphans}{widow}{Widow} }
      { \displaywidowpenalty }
	{ \msg_warning:nnn{widows-and-orphans}{widow}{Display~ widow} }
      { \@clubpenalty }
	{ \msg_warning:nn{widows-and-orphans}{orphan} }
      { \@clubpenalty + \widowpenalty }
	{ \msg_warning:nnn{widows-and-orphans}{orphan-widow}{} }
      { \@clubpenalty + \displaywidowpenalty }
	{ \msg_warning:nnn{widows-and-orphans}{orphan-widow}{display} }
%           
      { \brokenpenalty }
	{ \msg_warning:nn{widows-and-orphans}{hyphen} }
%           
      { \predisplaypenalty }
	{ \msg_warning:nnn{widows-and-orphans}{widow}{Lonely~ display} }
%           
      { \brokenpenalty + \widowpenalty }
	{ \msg_warning:nnn{widows-and-orphans}{widow}{Widow} }
      { \brokenpenalty + \displaywidowpenalty }
	{ \msg_warning:nnn{widows-and-orphans}{widow}{Display~ widow} }
      { \brokenpenalty + \@clubpenalty }
	{ \msg_warning:nn{widows-and-orphans}{orphan} }
      { \brokenpenalty + \@clubpenalty + \widowpenalty }
	{ \msg_warning:nnn{widows-and-orphans}{orphan-widow}{} }
      { \brokenpenalty + \@clubpenalty + \displaywidowpenalty }
	{ \msg_warning:nnn{widows-and-orphans}{orphan-widow}{display} }
    }
}

